#!/bin/sh
SCRIPTS=`dirname $0`
. ${SCRIPTS}/pax-validate

unset GROUPID
unset ARTIFACTID
unset VERSION

while
  getopts g:a:v:h- SETTING
do
  case ${SETTING} in
    h|\?) echo "pax-embed-jar -g groupId -a artifactId -v version [-- mvnopts ...]" ; exit ;;

    g) GROUPID=${OPTARG} ;;
    a) ARTIFACTID=${OPTARG} ;;
    v) VERSION=${OPTARG} ;;

    -) break ;;
  esac
done

shift $((${OPTIND}-1))

if [ -z "${GROUPID}" ]
then
  read -p "library groupId (org.ops4j.example) ? " GROUPID
fi
if [ -z "${ARTIFACTID}" ]
then
  read -p "library artifactId (myJarFile) ? " ARTIFACTID
fi
if [ -z "${VERSION}" ]
then
  read -p "library version (0.1.0-SNAPSHOT) ? " VERSION
fi

mvn pax:embed-jar \
  -DgroupId=${GROUPID:=org.ops4j.example} \
  -DartifactId=${ARTIFACTID:=myJarFile} \
  -Dversion=${VERSION:=0.1.0-SNAPSHOT} \
  ${PAX_CONSTRUCT_OPTIONS} "$@"

