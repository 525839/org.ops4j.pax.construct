#!/bin/sh
SCRIPTS=`dirname "$0"`

POM="${SCRIPTS}/pax-bootstrap-pom.xml"
case "`uname`" in
  CYGWIN*) POM=`cygpath --path --mixed "${POM}"` ;;
esac

if [ -z "${PAX_CONSTRUCT_VERSION}" ]
then
  PAX_CONSTRUCT_VERSION=${project.version}
fi

if mvn -o -npu -N -f "${POM}" -DPAX_CONSTRUCT_VERSION=${PAX_CONSTRUCT_VERSION} validate 2>/dev/null 1>&2
then
  : # already installed and validated
else
  echo BOOTSTRAP PAX-CONSTRUCT PLUGIN
  echo ==============================
  mvn -up -N -f "${POM}" -DPAX_CONSTRUCT_VERSION=${PAX_CONSTRUCT_VERSION} validate
fi

