#!/bin/sh
SCRIPTS=`dirname $0`
. ${SCRIPTS}/pax-validate

unset PLATFORM

while
  getopts p:h- SETTING
do
  case ${SETTING} in
    h|\?) echo "pax-provision -p platform [-- mvnopts ...]" ; exit ;;

    p) PLATFORM=${OPTARG} ;;

    -) break ;;
  esac
done

shift $((${OPTIND}-1))

mvn pax:provision -Dplatform=${PLATFORM:=choose} ${PAX_CONSTRUCT_OPTIONS} "$@"

