<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <parent>
    <groupId>${package}.build</groupId>
    <artifactId>bundles</artifactId>
    <version>${version}</version>
  </parent>
#literal()

  <modelVersion>4.0.0</modelVersion>
  <artifactId>compile-bundle</artifactId>

  <name>Configure OSGi bundles compiled from source</name>

  <packaging>pom</packaging>

  <properties>
    <bundle.location>${project.build.directory}/${project.build.finalName}.jar</bundle.location>
  </properties>

  <!--
    typical OSGi development dependencies
  -->
  <dependencies>
    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>osgi_R4_core</artifactId>
      <version>1.0</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>osgi_R4_compendium</artifactId>
      <version>1.0</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>

  <build>
    <!--
      compilation specific plugin configuration
    -->
    <pluginManagement>
      <plugins>
        <plugin>
          <artifactId>maven-compiler-plugin</artifactId>
          <configuration>
            <!--
              change if version should be independent of build JDK
            -->
            <source>${java.specification.version}</source>
            <target>${java.specification.version}</target>
            <debug>true</debug>
          </configuration>
        </plugin>
        <plugin>
          <groupId>org.ops4j.pax.maven</groupId>
          <artifactId>maven-bundle-plugin</artifactId>
          <extensions>true</extensions>
          <configuration>
            <instructions>
              <Bundle-Version>${project.version}</Bundle-Version>
#end
#set( $symbolicName = '$(replace;${bundle.package}_${project.artifactId};-;_)' )
              <Bundle-SymbolicName>${symbolicName}</Bundle-SymbolicName>
#literal()
              <!--
                assume public classes are in the top package, and private classes are under internal
              -->
              <Private-Package>${bundle.package}.internal</Private-Package>
              <Export-Package>!${bundle.package}.internal,${bundle.package}.*;version="${project.version}"</Export-Package>
              <!--
                embed all compile and runtime dependencies
              -->
              <Embed-Dependency>*;scope=compile|runtime</Embed-Dependency>
              <Embed-Directory>target</Embed-Directory>
              <Embed-StripVersion>true</Embed-StripVersion>
              <Embed-Transitive>true</Embed-Transitive>
              <!--
                load project specific settings
              -->
              <_include>-target/classes/META-INF/details.bnd</_include>
            </instructions>
          </configuration>
        </plugin>
        <!--
          Provide backup and recovery of generated metadata
        -->
        <plugin>
          <groupId>org.ops4j.pax.construct</groupId>
          <artifactId>maven-pax-plugin</artifactId>
          <executions>
            <execution>
              <id>clean-project</id>
              <phase>clean</phase>
              <goals>
                <goal>clean</goal>
              </goals>
            </execution>
            <execution>
              <id>backup-metadata</id>
              <phase>generate-resources</phase>
              <goals>
                <goal>backup</goal>
              </goals>
            </execution>
          </executions>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>

#end
</project>
