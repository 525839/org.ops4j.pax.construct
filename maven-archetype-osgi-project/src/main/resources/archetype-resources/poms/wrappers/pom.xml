<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <parent>
    <groupId>${package}.build</groupId>
    <artifactId>bundles</artifactId>
    <version>${version}</version>
  </parent>
#literal()

  <modelVersion>4.0.0</modelVersion>
  <artifactId>wrap-jar-as-bundle</artifactId>

  <name>Configure OSGi wrappers for third-party jar(s)</name>

  <organization/>
  <description>
    Simple OSGi wrapper around third-party jar(s)
  </description>
  <licenses>
    <license/>
  </licenses>

  <packaging>pom</packaging>

  <properties>
    <bundle.location>${project.build.directory}/${project.build.finalName}.jar</bundle.location>
  </properties>

  <build>
    <!--
      wrapper specific plugin configuration
    -->
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.ops4j.pax.maven</groupId>
          <artifactId>maven-bundle-plugin</artifactId>
          <extensions>true</extensions>
          <configuration>
            <instructions>
              <Bundle-Version>${project.version}</Bundle-Version>
#end
#set( $symbolicName = '$(replace;${project.artifactId};-;_)' )
              <Bundle-SymbolicName>${symbolicName}</Bundle-SymbolicName>
#literal()
              <!--
                export contents of bundle: don't use Export-Package:* as this exports everything on the classpath
              -->
              <_exportcontents/>
              <Private-Package>!*</Private-Package>
              <!--
                inline main artifact and embed all compile and runtime dependencies
              -->
              <Embed-Dependency>
                ${jar.artifactId};groupId=${jar.groupId};inline=true,
                *;scope=compile|runtime
              </Embed-Dependency>
              <Embed-StripVersion>true</Embed-StripVersion>
              <Embed-Transitive>true</Embed-Transitive>
              <!--
                load project specific settings
              -->
              <_include>-target/classes/META-INF/details.bnd</_include>
            </instructions>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>

#end
</project>
