#set( $dollar = '$' )
Bundle-Version: ${dollar}{project.version}
Bundle-SymbolicName: $(replace;${dollar}{bundle.package}_${dollar}{project.artifactId};-;_)

<!--
  by default, version and export all public packages from the compilation classpath
-->
Private-Package: ${dollar}{bundle.package}.internal
Export-Package: !${dollar}{bundle.package}.internal,\
  ${dollar}{bundle.package}.*;version="${dollar}{project.version}"

<!--
  load project specific settings
-->
-include: details.bnd
